    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.16.0",
    "prettier": "^2.7.1",
    "eslint-formatter-codeframe": "^7.32.1"
