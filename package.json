  "files": [
    "dist/*",
    "danger.js",
    "eslint.js",
    "prettier.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AckeeCZ/styleguide-backend-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "npm run test -- --collectCoverage",
    "lint": "eslint --ignore-path .gitignore '**/*.ts' -f codeframe",
    "lint:fix": "eslint --ignore-path .gitignore '**/*.ts' --fix",
